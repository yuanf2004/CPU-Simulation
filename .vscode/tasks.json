{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=gnu++14",
                "-g",
                "*.cpp",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds all .cpp files in the folder"
        }
    ]
}